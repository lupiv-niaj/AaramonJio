                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#323232"
                            android:maxLength="5"
                            android:inputType="number"
                            android:textSize="16sp"
                            android:text="50"
                            android:singleLine="true"
