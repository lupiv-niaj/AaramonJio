<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ff0000</item>
        <item name="colorPrimaryDark">@color/green</item>
        <item name="colorAccent">@color/ripple_material_light</item>
    </style>


    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">#FF8C8C8C</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FF8C8C8C</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">#FFE6E6E6</item>
        <item name="colorControlNormal">#FFE6E6E6</item>
        <item name="colorControlActivated">#FF8C8C8C</item>
    </style>



    <style name="ThemeName" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:dropDownListViewStyle">@style/mySpinnerStyle</item>
    </style>
    <style name="mySpinnerStyle" parent="@style/Widget.AppCompat.Spinner.Underlined">
        <item name="android:divider">#000</item>
        <item name="android:dividerHeight">1dp</item>
    </style>
</resources>
